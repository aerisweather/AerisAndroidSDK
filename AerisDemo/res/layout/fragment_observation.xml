<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    
    
    <LinearLayout
        android:id="@+id/llLoadedInfo"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical" >

        <include
            style="@style/FrameStyle"
            layout="@layout/view_observation" />

        <include
            style="@style/FrameStyle"
            layout="@layout/view_ob_table" />

        <LinearLayout
            style="@style/FrameStyle"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <com.example.view.DayNightView
                android:id="@+id/viewToday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <com.example.view.DayNightView
                android:id="@+id/viewTonight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            style="@style/FrameStyle"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <com.example.view.SmallForecastView
                android:id="@+id/viewInterval1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.example.view.SmallForecastView
                android:id="@+id/viewInterval2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.example.view.SmallForecastView
                android:id="@+id/viewInterval3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.example.view.SmallForecastView
                android:id="@+id/viewInterval4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>