<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card_shape" 
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvCurrently"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Currently"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCurrently"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Minneapolis, MN, US"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvPlace"
        android:layout_below="@+id/tvPlace"
        android:layout_marginTop="11dp"
        android:text="270"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewSpacer"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignRight="@+id/tvPlace"
        android:layout_below="@+id/tvTemperature"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ivWeatherIcon"
        android:background="@color/spacer" />

    <ImageView
        android:id="@+id/ivWeatherIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/tvCurrently"
        android:layout_alignTop="@+id/tvTemperature"
        android:scaleType="fitXY"
        android:src="@drawable/sunny" />

    <TextView
        android:id="@+id/tvFeelsLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvWeatherShort"
        android:layout_below="@+id/tvWeatherShort"
        android:layout_marginTop="5dp"
        android:text="Feels like 240"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvWeatherShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/viewSpacer"
        android:layout_below="@+id/viewSpacer"
        android:layout_marginTop="5dp"
        android:text="Mostly Cloudy"
        android:textColor="#ffffff" />

    

</RelativeLayout>